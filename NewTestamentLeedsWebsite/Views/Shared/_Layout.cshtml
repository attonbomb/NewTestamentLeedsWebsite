<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/MobileCSS")
        @Styles.Render("~/Content/themes/base/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header class="Header">
            <div class="content-wrapper">
                <div class="float-left">
                    <img src="~/Content/NTCG-Logo-130x43.png" alt="New Testament Church of God Logo" class="ntcglogo" />
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
                <div class="navigation-tom">
                    <nav>
                        @Html.MvcSiteMap().Menu()
                    </nav>
                    <div id="subNavContainer">
                    </div>
                </div>
            </div>            
        </header>
       @RenderSection("featured", required: false)<!-- this is the scrolling banner-->
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
        <div id="loginForm"></div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        <script src="~/Scripts/flaunt.js" type="text/javascript"></script>
        @*@Scripts.Render("~/bundles/MobileJS")*@
        <script src="~/Scripts/MyScripts/NavScript.js" type="text/javascript"></script>
        <script src="~/Scripts/MyScripts/Parallax.js" type="text/javascript"></script>
        @RenderSection("scripts", required: false) 
    </body>
</html>
